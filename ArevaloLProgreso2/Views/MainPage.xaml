<?xml version="1.0" encoding="utf-8" ?>
    
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArevaloLProgreso2.MainPage"
             Title="Bienvenido">

    <ScrollView>
        <StackLayout Padding="90" Spacing="25" VerticalOptions="Center">
            
            <Label Text="Bienvenido a la aplicacion de Lenin Nicolas Arevalo Garcia" 
                   FontSize="32" 
                   HorizontalOptions="Center"/>
            
            <Image Source="perfil.png" 
                   HeightRequest="185" 
                   Aspect="AspectFit" 
                   SemanticProperties.Description="Programando el proyecto final"/>
            
            <Button 
                Text="Ver un Chiste" 
                Clicked="OnChisteClicked"/>
            
            <Button 
                Text="Acerca de mí" 
                Clicked="OnInfoClicked"/>
            
        </StackLayout>
    </ScrollView>

</ContentPage>
