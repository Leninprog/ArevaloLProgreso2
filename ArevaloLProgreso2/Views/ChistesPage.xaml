<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArevaloLProgreso2.Views.ChistesPage"
             Title="ChistesPage">
    <AbsoluteLayout>

        <Label x:Name="ChisteLabel"
               FontSize="20" 
               Background="Beige"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               AbsoluteLayout.LayoutBounds="0.5, 0.4, 0.9, 0.3"
               AbsoluteLayout.LayoutFlags="All"/>

        <Button Text="Otro chiste"
            AbsoluteLayout.LayoutBounds="0.5,1,0.8,50"
            AbsoluteLayout.LayoutFlags="WidthProportional, PositionProportional"
            Clicked="OnOtroChisteClicked"/>
    </AbsoluteLayout>
    
</ContentPage>
